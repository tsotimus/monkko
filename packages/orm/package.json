{
  "name": "@monkko/orm",
  "version": "0.1.0",
  "description": "Modern MongoDB ORM for TypeScript with type-safe queries and schema validation",
  "keywords": [
    "mongodb",
    "orm",
    "typescript",
    "database",
    "schema",
    "validation",
    "type-safe",
    "monkko"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tsotimus/monkko.git",
    "directory": "packages/orm"
  },
  "homepage": "https://monkko.com",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    },
    "./*": {
      "import": "./dist/*/index.mjs",
      "types": "./dist/*/index.d.mts"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "build": "tsup"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "eslint": "^9.25.0",
    "mongodb": "^6.16.0",
    "tslib": "^2.8.1",
    "tsup": "^8.5.0",
    "typescript": "5.8.2"
  },
  "peerDependencies": {
    "mongodb": "^6.16.0"
  }
}
