{
  "name": "monko",
  "private": true,
  "scripts": {
    "c:build": "turbo run build --filter=@monko/cli",
    "p:build": "turbo run build --filter=@monko/orm",
    "build": "turbo run build",
    "dev": "turbo run dev --filter=@monko/orm --filter=@monko/next",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "cli:test": "turbo run test generate --filter=@monko/cli-testing"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.2",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
